# Core GCP / Vertex config

GOOGLE_CLOUD_PROJECT="your-gcp-project-id"
GOOGLE_CLOUD_LOCATION="us-central1"

# Optional: explicit Vertex project (falls back to GOOGLE_CLOUD_PROJECT)
# VERTEX_PROJECT_ID="your-gcp-project-id"

# Vertex AI models
VERTEX_CHAT_MODEL="gemini-2.0-flash-001"
VERTEX_EMBED_MODEL="text-embedding-004"
VERTEX_EMBED_DIM=768
VERTEX_EMBED_MAX_PER_CALL=250

# Vector Search endpoints (for querying)
VS_PAPERS_ENDPOINT_NAME="projects/.../locations/us-central1/indexEndpoints/your-papers-endpoint"
VS_PAPERS_DEPLOYED_INDEX_ID="papers-deployment-id"
VS_KB_ENDPOINT_NAME="projects/.../locations/us-central1/indexEndpoints/your-kb-endpoint"
VS_KB_DEPLOYED_INDEX_ID="kb-deployment-id"

# Vector Search index IDs (for upserts)
VS_PAPERS_INDEX_ID="papers-index-id"
VS_KB_INDEX_ID="kb-index-id"

# Search defaults
PAPERS_TOP_K=10      # how many neighbors for paper search
KB_TOP_K=5           # how many neighbors for KB RAG

# Optional: citation APIs
# OPENCITATIONS_TOKEN="your-opencitations-token"
# CROSSREF_MAILTO="you@example.com"

# Optional: arXiv metadata settings (offline scripts)
# ARXIV_JSON_PATH="/absolute/path/to/arxiv-metadata-oai-snapshot.json"
# ARXIV_SKIP_INDEXED=0
# ARXIV_MAX_ROWS=10000
# ARXIV_CHUNK_ROWS=1000
# ARXIV_EMBED_BATCH=100
# ARXIV_MAX_CHARS=8000
# ARXIV_BACKFILL_MAX_ROWS=95000
# ARXIV_BACKFILL_START_OFFSET=2476000
